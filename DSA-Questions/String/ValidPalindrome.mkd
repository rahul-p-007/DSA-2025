#include <bits/stdc++.h>
using namespace std;

bool CheckPalindrome(string s, int i, int j) {
    while (i <= j) {
        if (s[i] != s[j]) {
            return false;
        }
        i++;
        j--;
    }
    return true;
}

bool isValidPalindrome(string s) {
    int start = 0;
    int end = s.length() - 1;
    while (start <= end) {
        if (s[start] != s[end]) {
            return CheckPalindrome(s, start + 1, end) || CheckPalindrome(s, start, end - 1);
        }
        start++;
        end--;
    }
    return true;
}
```

